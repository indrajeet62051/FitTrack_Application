<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/deleteAccountLayout">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/white_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/changeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_box_back"
            android:drawableLeft="@drawable/baseline_lock_reset_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_bold"
            android:padding="10dp"
            android:text="Delete Account"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Enter Your Registered Email"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:paddingEnd="5dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/delemail"
            android:fontFamily="@font/hind_siliguri"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/baseline_email_24"
            android:hint="Email"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:background="@drawable/textbox_bg"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Enter Your Password"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:textColor="@color/black" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/delpassword"
            android:fontFamily="@font/hind_siliguri"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/baseline_lock_24"
            android:hint="Password"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:background="@drawable/textbox_bg"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="@color/darkblue"
                android:background="@drawable/bg2"
                android:fontFamily="@font/kurale"
                android:text="CANCEL"
                android:elevation="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkblue"
                android:background="@drawable/bg2"
                android:fontFamily="@font/kurale"
                android:text="Delete"
                android:elevation="2dp"
                android:textAllCaps="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>